@model WebSite.Models.Entity.app_users
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<link rel="stylesheet" type="text/css" href="~/Content/assets/pages/j-pro/css/demo.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/pages/j-pro/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/pages/j-pro/css/j-pro-modern.css">



<div class="card">
    <div class="card-header">
        <h5>Add User</h5>
        <span></span>

    </div>
    <div class="card-block">
        <div class="j-wrapper j-wrapper-640">
            @using (Html.BeginForm("AddUser", "User", FormMethod.Post, new { @class = "md-float-material form-material" }))
            {
            <div class="j-content">
                <div>
                    <label class="j-label">Name</label>
                    <div class="j-unit">
                        <div class="j-input">
                            <label class="j-icon-right" for="username">
                                <i class="icofont icofont-ui-user"></i>
                            </label>
                            <input type="text" id="username" name="username">
                        </div>
                    </div>
                </div>
                <div>
                    <label class="j-label">Sur Name</label>
                    <div class="j-unit">
                        <div class="j-input">
                            <label class="j-icon-right" for="usersurname">
                                <i class="icofont icofont-ui-user"></i>
                            </label>
                            <input type="text" id="usersurname" name="usersurname">
                        </div>
                    </div>
                </div>
                <div>
                    <div>
                        <label class="j-label">Email</label>
                    </div>
                    <div class="j-unit">
                        <div class="j-input">
                            <label class="j-icon-right" for="usermail">
                                <i class="icofont icofont-envelope"></i>
                            </label>
                            <input type="email" id="usermail" name="usermail">
                        </div>
                    </div>
                </div>
                <div>
                    <div>
                        <label class="j-label ">TC</label>
                    </div>
                    <div class="j-unit">
                        <div class="j-input">
                            <label class="j-icon-right" for="usertc">
                                <i class="icofont icofont-ui-check"></i>
                            </label>
                            <input type="text" id="usertc" name="usertc">
                        </div>
                    </div>
                </div>
                
                <div>
                    <div>
                        <label class="j-label ">Password</label>
                    </div>
                    <div class="j-unit">
                        <div class="j-input">
                            <label class="j-icon-right" for="password">
                                <i class="icofont icofont-lock"></i>
                            </label>
                            <input type="password" id="password" name="password">
                        </div>
                    </div>
                </div>
                <div>
                    <div>
                        <label class="j-label ">Phone</label>
                    </div>
                    <div class="j-unit">
                        <div class="j-input">
                            <label class="j-icon-right" for="userphone">
                                <i class="icofont icofont-lock"></i>
                            </label>
                            <input type="tel" id="userphone" name="userphone">
                        </div>
                    </div>
                </div>
                <div>
                    <div>
                        <label class="j-label "> Group </label>
                    </div>
                    <div class="j-unit">
                        <label class="j-input j-select">
                            @Html.DropDownList("group_id")
                            <i></i>
                        </label>
                    </div>
                </div>
                <div class="j-response"></div>
            </div>
                <!-- end /.content -->
                <div class="j-footer">
                    <button type="submit" class="btn btn-primary">Add User</button>
                </div>
                <!-- end /.footer -->
            }
            </div>
    </div>
</div>



<script type="text/javascript" src="~/Content/assets/pages/j-pro/js/custom/reg-form.js"></script>
<script src="~/Content/assets/js/vartical-layout.min.js"></script>
